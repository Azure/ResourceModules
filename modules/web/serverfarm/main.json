    "resourceId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the app service plan."
      },
      "value": "[resourceId('Microsoft.Web/serverfarms', parameters('name'))]"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location the resource was deployed into."
