    "privateDnsZone": {
      "existing": true,
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2020-06-01",
      "name": "[parameters('privateDnsZoneName')]"
    },
    "MX": {
      "type": "Microsoft.Network/privateDnsZones/MX",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}/{1}', parameters('privateDnsZoneName'), parameters('name'))]",
      "properties": {
